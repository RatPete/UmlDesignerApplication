<Window x:Class="WpfDiagramDesigner.Source.PRL.Views.NewTypeSelectorPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDiagramDesigner.Source.PRL.Views"
        mc:Ignorable="d"
        WindowStyle="None"
        SizeToContent="WidthAndHeight"
        Title="NewTypeSelectorPopup"  DataContext="{Binding ViewModel}" x:Name="NewTypeSelectorView" >

    <StackPanel>
        <TextBlock Text="{Binding ErrorDescription}" Width="260" TextWrapping="Wrap" FontSize="14" Margin="10" />
        <DockPanel Width="260">
            <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" Text="Kiválasztott objektum típus:" Margin="10"/>
            <ComboBox Margin="10" DockPanel.Dock="Left" ItemsSource="{Binding Types}" SelectedItem="{Binding SelectedItem}"></ComboBox>
        </DockPanel>
        <DockPanel Width="260">
            <Button DockPanel.Dock="Left" Width="100" Content="Létrehozás" Click="FixButton_Click" Margin="20,0,20,0"/>
            <Button DockPanel.Dock="Right" Width="100" Margin="0,0,20,0" Content=" Elvetés" Click="RejectButton_Click" />
        </DockPanel>
    </StackPanel>
</Window>
